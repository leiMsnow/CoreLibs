<resources>

    <style name="AppTheme.LightBlue">

        <item name="colorPrimary">@color/theme_light_blue</item>
        <item name="colorPrimaryDark">@color/theme_light_blue</item>
        <item name="colorAccent">@color/theme_light_blue_700</item>

        <item name="android:statusBarColor">@color/theme_light_blue</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>


    <style name="AppTheme.LightBrown" >
        <item name="colorPrimary">@color/theme_light_brown</item>
        <item name="colorPrimaryDark">@color/theme_light_brown</item>
        <item name="colorAccent">@color/theme_light_brown_700</item>

        <item name="android:statusBarColor">@color/theme_light_brown</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:itemBackground">@drawable/selector_menu_item_grey</item>

    </style>

    <style name="AppTheme.Translucent">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/translucent_a80</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Translucent.Full">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
