<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="navigationIcon">@mipmap/ic_menu_back</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.Light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="searchViewStyle">@style/SearchView.Light</item>
        <item name="android:textColorHint">@color/theme_grey_300</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <!-- 禁止多点触摸 -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:textViewStyle">@style/Widget.TextView.Style</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:editTextColor">@color/main_black</item>
        <item name="editTextColor">@color/main_black</item>

    </style>

    <style name="AppTheme.LightBlue">

        <item name="colorPrimary">@color/theme_light_blue</item>
        <item name="colorPrimaryDark">@color/theme_light_blue</item>
        <item name="colorAccent">@color/theme_light_blue_700</item>

    </style>

    <style name="AppTheme.LightBrown" parent="AppTheme">

        <item name="colorPrimary">@color/theme_light_brown</item>
        <item name="colorPrimaryDark">@color/theme_light_brown</item>
        <item name="colorAccent">@color/theme_light_brown_700</item>

    </style>


    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@color/translucent_a80</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="AppTheme.Translucent.Full">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>