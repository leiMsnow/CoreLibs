<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChangeColorView">
        <attr name="changeIcon" format="reference" />
        <attr name="changeColor" format="color" />
        <attr name="defaultColor" format="color" />
        <attr name="changeText" format="string" />
        <attr name="changeTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>
    <attr name="SwipeBackLayoutStyle" format="reference" />


    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the line indicator. -->
        <attr name="vpiLinePageIndicatorStyle" format="reference" />
        <attr name="vpiCirclePageIndicator" format="reference" />
    </declare-styleable>

    <declare-styleable name="LinePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="vpi_centered" format="boolean" />
        <!-- Color of the unselected lines that represent the pages. -->
        <attr name="vpi_unselectedColor" format="color" />
        <!-- Color of the selected line that represents the current page. -->
        <attr name="vpi_selectedColor" format="color" />
        <!-- Width of each indicator line. -->
        <attr name="vpi_lineWidth" format="dimension" />
        <!-- Width of each indicator line's stroke. -->
        <attr name="vpi_strokeWidth" format="dimension" />
        <!-- Width of the gap between each indicator line. -->
        <attr name="vpi_gapWidth" format="dimension" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="vpi_centered" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="vpi_fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="vpi_pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="vpi_radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="vpi_snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="vpi_strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="vpi_strokeWidth" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>

</resources>